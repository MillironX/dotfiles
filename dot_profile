# Linuxbrew setup
if [ -d $HOME/../linuxbrew/.linuxbrew ]; then
  BREWPATH=$HOME/../linuxbrew/.linuxbrew
elif [ -d $HOME/.linuxbrew ]; then
  BREWPATH=$HOME/.linuxbrew
fi

if [ -n "$BREWPATH" ]; then
  if [[ "$SHELL" =~ "zsh" ]]; then
    export fpath+=($BREWPATH/share/zsh/site-functions)
  fi
  eval "$($BREWPATH/bin/brew shellenv)"
fi
